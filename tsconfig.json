{
	"compilerOptions": {
		"outDir": "./dist/",
		"resolveJsonModule": true,
		"esModuleInterop": true,
		"noImplicitAny": false,
		"sourceMap": true,
		"strict": false,
		"module": "esnext",
		"moduleResolution": "node",
		"lib": [
	      "dom",
	      "es2017"
	    ],

		"target": "es5",
		"jsx": "react",
		"allowJs": true
	},
	"exclude": [
		"node_modules"
	]
}