{
    "compilerOptions": {
        "outDir": "dist/",
        "module": "commonjs",
        "moduleResolution": "node",
        "esModuleInterop": true,
        "resolveJsonModule": true,
        "allowSyntheticDefaultImports": true,
        "noImplicitAny": false,
        "sourceMap": true,
        "strict": false,
        "downlevelIteration": true,
        "target": "es5",
        "allowJs": true,
    },
    "include": [
        "src/**/*"
    ],
    "exclude": [
		"node_modules",
		"ressources"
	]
}