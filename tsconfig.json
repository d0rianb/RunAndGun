{
  "compilerOptions": {
    "baseUrl": "./",
    "module": "esnext",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "allowSyntheticDefaultImports": true,
    "noImplicitAny": false,
    "sourceMap": true,
    "strict": false,
    "target": "es6",
    "allowJs": true
  },
  "include": [
        "src/**/*"
    ],
  "exclude": [
		"node_modules",
        "dist"
	]
}